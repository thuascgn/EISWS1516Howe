<Window x:Class="Steuerclient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Steuerclient"
        mc:Ignorable="d"
        Title="Task Status" Height="350" Width="525">
    <Grid>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="270" Margin="40,20,0,0" VerticalAlignment="Top" Width="140" SelectionChanged="listView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="260" Margin="280,20,0,0" VerticalAlignment="Top" Width="160" SelectionChanged="listBox_SelectionChanged"/>
    </Grid>
</Window>
